<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">
      <div class="challange-title">
        <h1><%= @challenge.title %></h1>
      </div>
      <%= image_tag(@challenge.image_url, class: 'challenge_image')  %>
      <p><%= @challenge.description %></p>
      <div class="daily-challange">
        <h3>Challange status:</h3>

        <%= simple_form_for(DailyProgress.new(user: current_user)) do |f| %>
            <%= f.input :daily_challenge_completed, as: :radio_buttons, collection: DailyProgress::STATES %>
            <%= f.submit %>
        <% end %>


        <div class="form-group">
          <%= check_box_tag :complete %>
          <%= label_tag(:contact_owner, "Complete") %>
        </div>

        <div class="form-group">
          <%= check_box_tag :not_able %>
          <%= label_tag(:not_able, "Couldn't complete the challenge") %>
        </div>

        <div class="form-group">
          <%= check_box_tag :not_complete %>
          <%= label_tag(:not_complete, "Didn't complete the challange") %>
        </div>

        <div class="submit-btn">
          <%= submit_tag("Submit") %>
        </div>
      </div>

      <div class='spacer'></div>

      <%= link_to "Go back to category #{@challenge.category.name.downcase}", category_path(@challenge.category), class: 'challenge-btn' %>

      <div class='spacer'></div>
    </div>
  </div>
</div>
