<header class="ui-navbar">
  <div class="ui-navbar-brand">
    <%= link_to root_path do %>
    <h2 id="nav-h2">Greener</h2>
    <% end %>
  </div>
  <% if user_signed_in? %>
  <div class="d-flex align-items-center">
    <div class="d-flex align-items-center">
      <span class='font-weight-bold text-white responsive-span'>
        <%= current_user.tree_score %>
        <i class="fas fa-tree nav-icons icon-score"></i>
      </span>
    </div>
    <div class="d-flex align-items-center">
      <span class='font-weight-bold text-white responsive-span'>
        <%= current_user.notifications.size %>
        <%= link_to users_notifications_path do %>
        <i class="fas fa-bell nav-icons icon-score"></i>
        <% end %>
      </span>
    </div>
    <div class="d-flex align-items-center">
      <%= link_to dashboard_path do %>
      <%= cl_image_tag current_user.avatar.key, class: "avatar-large nav-avatar" %>
      <% end %>
      <button class="ui-icon-btn" id="open-menu-btn">
        <i class="fas fa-chevron-down"></i>
      </button>
    </div>
  </div>
  <% else %>
  <div class="d-flex align-items-center">
    <%= link_to "Sign up", new_user_registration_path, class: "text-white nav-btn" %>
    <%= link_to "Sign in", new_user_session_path, class: "text-white nav-btn"  %>
    <button class="ui-icon-btn" id="open-menu-btn">
      <i class="fas fa-bars"></i>
    </button>
  </div>
  <% end %>
</header>

<!-- navbar -->

<%= render 'shared/nav_menu' %>
